{
    "env": {
        "es2021": true,
        "node": true,
        "browser": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        // "react-hooks/rules-of-hooks": "error",
        // "react-hooks/exhaustive-deps": "warn",
        "react/react-in-jsx-scope": "off",
        "react/jsx-filename-extension": [1, {"extensions": [".js",".jsx"]}],
        "react/prop-types": "off",
        "no-tabs": 0
    }
}
